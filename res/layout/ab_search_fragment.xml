<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="3dp"
        android:background="@drawable/selector_action_button_background"
        android:gravity="center"
        android:text="@string/actionbar_title_search"
        android:textColor="@color/actionbar_title_color"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/action_search_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/action_search_btn"
        android:layout_toRightOf="@id/search_title"
        android:background="@drawable/shap_edt_bg"
        android:hint="@string/action_menu_search_view_hint"
        android:imeOptions="actionSearch"
        android:padding="5dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textCursorDrawable="@null" />

    <ImageButton
        android:id="@id/action_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/selector_ab_search_btn" />

</RelativeLayout>