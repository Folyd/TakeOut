<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locale_map" >

    <TextView
        android:id="@+id/is_beixiao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_profile_item_bg"
        android:gravity="center"
        android:tag="@string/beixiao"
        android:text="@string/beixiao"
        android:textColor="@color/main_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/is_hongcheng"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_profile_item_bg"
        android:gravity="center"
        android:tag="@string/hongcheng"
        android:text="@string/hongcheng"
        android:textColor="@color/main_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/is_nanxiao"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_profile_item_bg"
        android:gravity="center"
        android:tag="@string/nanxiao"
        android:text="@string/nanxiao"
        android:textColor="@color/main_color"
        android:textSize="18sp" />

</RelativeLayout>